<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.web.mapper.OrderMapper">
  <insert id="insertOrder" parameterType="com.bitcamp.web.domain.OrderDTO">
    insert into ORDERS (CUSTOMER_ID, EMPLOYEE_ID, SHIPPER_ID) 
    values (#{customerId}, #{employeeId}, #{shipperId})
  </insert>
  <select id="selectOrders" resultType="com.bitcamp.web.domain.OrderDTO">
    select * from ORDERS
  </select>
  <select id="selectOrdersByOption" resultType="com.bitcamp.web.domain.OrderDTO" 
    parameterType="com.bitcamp.web.domain.OrderDTO">
    select * from ORDERS where CUSTOMER_ID = #{customerId}
  </select>
  <select id="selectOrderById" resultType="com.bitcamp.web.domain.OrderDTO" 
    parameterType="string">
    select * from ORDERS where ORDER_ID = #{value}
  </select>
  <update id="updateOrder" parameterType="com.bitcamp.web.domain.OrderDTO">
    update ORDERS set CUSTOMER_ID = #{customerId}, 
        EMPLOYEE_ID = #{employeeId}, 
        SHIPPER_ID = #{shipperId}
    where ORDER_ID = #{orderId}
  </update>
  <delete id="deleteOrder" parameterType="com.bitcamp.web.domain.OrderDTO">
    delete from ORDERS where ORDER_ID = #{orderId}
  </delete>
</mapper>